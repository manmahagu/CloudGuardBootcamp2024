{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "adminaccess",
			"Effect": "Allow",
			"Action": "*",
			"Resource": "*",
			"Condition": {
				"StringEquals": {
					"aws:RequestedRegion": [
						"us-east-1",
						"us-east-2",
						"eu-central-1",
						"us-west-2",
						"eu-west-2",
						"ap-southeast-1",
						"ap-southeast-2"
					]
				}
			}
		},
		{
			"Sid": "ebsvolumerestriction",
			"Effect": "Deny",
			"Action": "ec2:*",
			"Resource": "*",
			"Condition": {
				"ForAnyValue:NumericGreaterThanEquals": {
					"ec2:VolumeSize": "131"
				}
			}
		},
		{
			"Sid": "ec2restrictions",
			"Effect": "Deny",
			"Action": [
				"aws-marketplace:Unsubscribe",
				"aws-marketplace:Subscribe",
				"ec2:PurchaseReservedInstancesOffering",
				"ec2:RequestSpotInstances",
				"ec2:CancelSpotFleetRequests",
				"ec2:GetCapacityReservationUsage",
				"ec2:PurchaseHostReservation",
				"ec2:GetHostReservationPurchasePreview",
				"ec2:RequestSpotFleet",
				"ec2:DescribeSpotInstanceRequests",
				"ec2:DescribeHostReservationOfferings",
				"ec2:ModifySpotFleetRequest",
				"ec2:CreateCapacityReservation",
				"ec2:CreateSpotDatafeedSubscription",
				"ec2:DescribeScheduledInstanceAvailability",
				"ec2:DescribeReservedInstances",
				"ec2:ModifyReservedInstances",
				"ec2:DescribeReservedInstancesListings",
				"ec2:PurchaseScheduledInstances",
				"ec2:CreateReservedInstancesListing",
				"ec2:DescribeCapacityReservations",
				"ec2:DescribeHostReservations",
				"ec2:DescribeSpotFleetRequests",
				"ec2:DescribeHosts",
				"ec2:CancelSpotInstanceRequests",
				"ec2:DescribeSpotFleetInstances",
				"ec2:AcceptReservedInstancesExchangeQuote",
				"ec2:AllocateHosts",
				"ec2:CancelCapacityReservation",
				"ec2:CancelReservedInstancesListing",
				"servicequotas:ListServices",
				"servicequotas:ListServiceQuotaIncreaseRequestsInTemplate",
				"servicequotas:ListRequestedServiceQuotaChangeHistory",
				"servicequotas:ListTagsForResource",
				"servicequotas:ListRequestedServiceQuotaChangeHistoryByQuota",
				"servicequotas:ListAWSDefaultServiceQuotas",
				"servicequotas:ListServiceQuotas"
			],
			"Resource": "*"
		},
		{
			"Sid": "limitinstancetype",
			"Effect": "Deny",
			"Action": "ec2:RunInstances",
			"Resource": "arn:aws:ec2:*:*:instance/*",
			"Condition": {
				"ForAnyValue:StringNotLike": {
					"ec2:InstanceType": [
						"*.micro",
						"*.nano",
						"*.small",
						"*.medium",
						"*.large"
					]
				}
			}
		},
		{
			"Sid": "DenyAllActionForDevAdminUser",
			"Effect": "Deny",
			"Action": "*",
			"Resource": [
				"arn:aws:iam::*:user/dev-admin",
				"arn:aws:iam::*:group/Admins"
			]
		},
		{
			"Sid": "rdsinstancerestriction",
			"Effect": "Deny",
			"Action": "rds:CreateDBInstance",
			"Resource": "*",
			"Condition": {
				"ForAnyValue:StringNotLike": {
					"rds:DatabaseClass": [
						"db.*.large",
						"db.*.xlarge"
					]
				}
			}
		},
		{
			"Sid": "iamdeny",
			"Effect": "Deny",
			"Action": [
				"iam:GenerateCredentialReport",
				"iam:UpdateAssumeRolePolicy",
				"iam:GenerateServiceLastAccessedDetails",
				"iam:UpdateGroup",
				"iam:ResetServiceSpecificCredential",
				"iam:DeletePolicy",
				"iam:CreateSAMLProvider",
				"iam:SetSTSRegionalEndpointStatus",
				"iam:CreateUser",
				"iam:CreateAccessKey",
				"iam:SetSecurityTokenServicePreferences",
				"iam:UpdateAccountName",
				"iam:CreateLoginProfile",
				"iam:AddUserToGroup",
				"iam:RemoveUserFromGroup",
				"iam:GenerateOrganizationsAccessReport",
				"iam:GetAccountEmailAddress",
				"iam:CreateAccountAlias",
				"iam:DetachGroupPolicy",
				"iam:UpdateAccountEmailAddress",
				"iam:GetAccountAuthorizationDetails",
				"iam:DetachUserPolicy",
				"iam:GetCredentialReport",
				"iam:ChangePassword",
				"iam:PutGroupPolicy",
				"iam:UpdateLoginProfile",
				"iam:CreateGroup",
				"iam:DeleteAccountPasswordPolicy",
				"iam:UpdateUser",
				"iam:PutUserPermissionsBoundary",
				"iam:GetAccessKeyLastUsed",
				"iam:DeleteUserPolicy",
				"iam:AttachUserPolicy",
				"iam:DeleteUser",
				"iam:CreateOpenIDConnectProvider",
				"iam:AttachGroupPolicy",
				"iam:PutUserPolicy",
				"iam:DeleteGroupPolicy",
				"iam:DeletePolicyVersion",
				"iam:GetAccountSummary"
			],
			"Resource": "*"
		}
	]
}
